    "start": "npm run serve"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
