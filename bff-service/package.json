{
  "name": "bff-service",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build": "npm run tslint && rm -rf dist && npm run build-ts",
    "build-ts": "tsc",
    "serve": "node dist/server.js",
